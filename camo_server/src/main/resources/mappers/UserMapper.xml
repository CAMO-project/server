<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jcw.camo_server.mapper.UserMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(user_email, user_password, user_name, user_phone, user_role)
        VALUES (#{email}, #{password}, #{name}, #{phone}, #{role})
    </insert>

    <select id="findByEmail" resultType="jcw.camo_server.entity.User">
        SELECT * FROM user WHERE user_email = #{email}
    </select>

    <select id="findById" resultType="jcw.camo_server.entity.User">
        SELECT * FROM user WHERE user_id = #{id}
    </select>

    <select id="findAll" resultType="jcw.camo_server.entity.User">
        SELECT * FROM user
    </select>

</mapper>